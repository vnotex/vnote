		<itemData name="Pattern"  defStyleNum="dsOthers"/>
		<itemData name="Mason Tag"  defStyleNum="dsKeyword"/>
		<itemData name="Mason Method"  defStyleNum="dsKeyword"/>
		<itemData name="HTML"  defStyleNum="dsString"/>
	</itemDatas>
  </highlighting>
