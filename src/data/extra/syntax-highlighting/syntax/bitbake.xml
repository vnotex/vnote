      <item>do_uboot_mkimage</item>
      <item>do_validate_branches</item>
      <item>do_generate_qt_config_file</item>
      <item>do_spdx</item>
      <item>oe_runmake</item>
      <item>export</item>
      <item>install</item>
      <item>kernel_configme</item>
