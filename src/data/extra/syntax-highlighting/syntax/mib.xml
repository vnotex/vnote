            <item>CHOICE</item>
            <item>COMPONENT</item>
            <item>COMPONENTS</item>
            <item>CONTACT-INFO</item>
            <item>CREATION-REQUIRES</item>
            <item>DEFAULT</item>
            <item>DEFINED</item>
            <item>DEFINITIONS</item>
            <item>DEFVAL</item>
            <item>DESCRIPTION</item>
            <item>DISPLAY-HINT</item>
            <item>END</item>
            <item>ENUMERATED</item>
            <item>ENTERPRISE</item>
            <item>EXPLICIT</item>
            <item>EXPORTS</item>
