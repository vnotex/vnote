<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE language SYSTEM "language.dtd">
<!-- Ref SMIv2: RFC 2578, RFC 2579 and RFC 2580 -->
<language name="MIB" version="1" kateversion="3.4" section="Other" extensions="*.mib" casesensitive="1" author="Jaap Keuter (jaap.keuter@xs4all.nl)" license="MIT">
    <highlighting>
        <list name="keywords">
            <item>ABSENT</item>
            <item>ACCESS</item>
            <item>AGENT-CAPABILITIES</item>
            <item>ANY</item>
            <item>APPLICATION</item>
