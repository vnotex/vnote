            <item>NOTIFICATION-GROUP</item>
            <item>NOTIFICATION-TYPE</item>
            <item>NOTIFICATIONS</item>
            <item>NULL</item>
            <item>OBJECT-GROUP</item>
            <item>OBJECT-IDENTITY</item>
            <item>OBJECT-TYPE</item>
            <item>OBJECTS</item>
            <item>OF</item>
            <item>OPTIONAL</item>
            <item>ORGANIZATION</item>
            <item>PLUS-INFINITY</item>
            <item>PRESENT</item>
            <item>PRIVATE</item>
