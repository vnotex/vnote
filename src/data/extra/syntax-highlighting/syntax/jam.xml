      </context>

      <context attribute="String" lineEndContext="#stay" name="String">
        <Detect2Chars attribute="VariableDelimiter" context="Variable" char="$" char1="("/>
        <Detect2Chars attribute="EscapeSeq" context="#stay" char="\" char1="&quot;"/>
