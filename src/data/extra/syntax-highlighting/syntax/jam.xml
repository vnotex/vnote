        <Detect2Chars attribute="VariableDelimiter" context="Variable" char="$" char1="("/>
        <DetectChar attribute="String" context="String" char="&quot;"/>
        <RegExpr attribute="Feature" context="#stay" String="([^\t $>&quot;#\\]+|\$(?!\()|\\.)+"/>
